<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lokadin.sandy.example.com.lokadin.DetailActivity">


    <TextView
        android:id="@+id/detailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="72dp"
        android:text="Nothing"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/detailDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/detailText"
        android:layout_below="@+id/detailText"
        android:layout_marginTop="33dp"
        android:text="What is your Opinion?"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/myInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/detailDescription"
        android:layout_below="@+id/detailDescription"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/detailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/myInput"
        android:layout_toEndOf="@+id/detailDescription"
        android:onClick="addButtonClick"
        android:text="Comment" />

    <TextView
        android:id="@+id/myComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/myInput"
        android:layout_below="@+id/myInput"
        android:layout_marginTop="31dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/myDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/detailButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:onClick="deleteButtonClick"
        android:text="Archive" />

</RelativeLayout>
